bot_on() {
clear
systemctl start xolpanel
systemctl enable xolpanel
sleep 2
echo "Done"
echo "Your Data Bot"
read -n 1 -s -r -p "Press [ Enter ] to back on menu"
menu
}
bot_off() {
clear
systemctl stop xolpanel
systemctl disable xolpanel
sleep 2
echo "Done"
sleep 2
read -n 1 -s -r -p "Press [ Enter ] to back on menu"
menu
}
